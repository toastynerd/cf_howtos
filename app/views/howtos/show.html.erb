<h2><%= @howto.title %></h2>
<%= link_to "Edit Howto", edit_howto_path(@howto), :class => "button"%>
<%= link_to "Delete Howto",
            howto_path(@howto),
            :method => :delete,
            :confirm => "Are you sure you want to delete this howto?", :class => "button" %>

<%= link_to "New Step", new_howto_step_path(@howto), :class => "button" %>
<ul class="panel" id="steps">
  <%= @howto.steps.each do |step| %>
  <li>
    #<%= step.id %>
    <%= link_to step.title, [@howto, @title] %>
  </li>
  <% end %>
</ul>