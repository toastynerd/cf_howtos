<div class="step panel" id="step">
  <h2><%= @step.title %></h2>
  <%= simple_format(@step.description) %>
  <%= link_to "Edit Step", [:edit, @howto, @step], :class => "button" %>
  <%= link_to "Delete Step", [@howto, @step], :method => :delete, :confirm => "Are you sure you want to delete this step?", :class => "button" %>
</div>